    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "https://${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "C:\\Program Files (x86)\\Microsoft\\Edge\\Application\\msedge.exe",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "port": 9222 // Specify the port for the debugging target
        }
    ]
}